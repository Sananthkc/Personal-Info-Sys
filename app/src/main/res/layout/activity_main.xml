<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lgv1"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140sp"
        android:text="Personal Information System"
        android:textAlignment="center"
        android:textColor="#D6BB93"
        android:textSize="25sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textAlignment="center"
        android:textColor="#EAE6C3"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/eTLtEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150sp"
        android:layout_marginHorizontal="30sp"
        android:ems="10"
        android:hint="Enter Email"
        android:textColor="#FFFFFF"
        android:textColorHint="#F5F4F8"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/eTLPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30sp"
        android:ems="10"
        android:hint="Enter Password"
        android:textColor="#FFFFFF"
        android:textColorHint="#F5F4F8"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/buttonlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70sp"
        android:background="@drawable/buttonlogin"
        android:backgroundTintMode="add"
        android:text="LOGIN"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Forgot Password?"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textregister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:text="Create new account"
        android:textAlignment="center"
        android:textColor="#FFFFFF" />

    <ProgressBar
        android:id="@+id/progressBarLogin"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:visibility="invisible" />

</LinearLayout>