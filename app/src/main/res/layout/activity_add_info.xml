<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/design_default_color_surface"
    tools:context=".Add_info">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Details"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#334097">

        </TextView>

        <ImageView
        android:id="@+id/profileImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        app:srcCompat="@mipmap/ic_launcher" />



        <EditText
            android:id="@+id/person_name"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:hint="Name"
            android:paddingLeft="10dp"
            android:textColor="#000000">

        </EditText>

        <EditText
            android:id="@+id/person_birth"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:background="#ffffff"
            android:hint="dd/mm/yyyy"
            android:paddingLeft="10dp"
            android:textColor="#000000">

        </EditText>

        <EditText
            android:id="@+id/person_address"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:background="#ffffff"
            android:hint="Address"
            android:paddingLeft="10dp"
            android:textColor="#101010">

        </EditText>


        <EditText
            android:id="@+id/person_email"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:background="#ffffff"
            android:hint="Email id"
            android:paddingLeft="10dp"
            android:textColor="#000000">

        </EditText>

        <EditText
            android:id="@+id/person_mobile"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:background="#ffffff"
            android:hint="Mobile number"
            android:paddingLeft="10dp"
            android:textColor="#000000">

        </EditText>

        <EditText
            android:id="@+id/person_qualification"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:background="#ffffff"
            android:hint="Qualification details"
            android:paddingLeft="10dp"
            android:textColor="#000000">

        </EditText>

        <EditText
            android:id="@+id/person_school"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:background="#ffffff"
            android:hint="School / college name"
            android:paddingLeft="10dp"
            android:textColor="#000000">

        </EditText>


        <Button
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="140dp"
            android:background="@color/colorPrimaryDark"
            android:drawableStart="@drawable/ic_baseline_person_add_24"
            android:drawableLeft="@drawable/ic_baseline_person_add_24"
            android:drawablePadding="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Add "
            android:textColor="#ffffff"
            android:textStyle="bold">

        </Button>


    </LinearLayout>

